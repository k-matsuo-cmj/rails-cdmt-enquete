<h1>アンケート変更</h1>

<%= form_with(model: @enquete, method: :put, local: true, data: { confirm: "アンケートを更新します。よろしいですか？" }) do |f| %>
  <div class="mb-3 row">
    <%= f.label :title, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="mb-3 row">
    <%= f.label :deadline, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.date_field :deadline, class: "form-control" %>
    </div>
  </div>
  <div class="mb-3 row">
    <%= f.label :users, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.select :users, options_for_select(@users.map{|u|[u.user_name, u.id]}, @enquete.replies.map{|r|r.user.id}), {}, {multiple: true, size: 10, class: "form-select", disabled: true} %>
    </div>
  </div>
  <div class="m-5 row">
    <%= f.submit "更新", class:"btn btn-info" %>
  </div>
<% end %>